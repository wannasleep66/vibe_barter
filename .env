PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=27017
DB_NAME=barter_vibe
DB_USER=
DB_PASS=
DB_URL=mongodb://localhost:27017/barter_vibe

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
